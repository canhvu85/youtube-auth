<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="DefaultAppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="DefaultAppTheme.FullScreen" parent="DefaultAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DefaultAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="DefaultAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Toolbar title. Fix for same size on landscape and portrait modes-->
    <style name="DefaultAppTheme.ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
</resources>